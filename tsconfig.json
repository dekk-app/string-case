{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "dist",
    "declarationDir": "./dist"
  },
  "exclude": ["node_modules", "__tests__","dist", "types"],
  "include": ["src/*"]
}
